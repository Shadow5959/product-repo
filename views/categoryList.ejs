<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category List</title>
    <link rel="stylesheet" href="categoryStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1 style="font-size: 50px;" class="title">Category List</h1>
    <div>
        <button class="btn btn-info mb-3 btn-sm"  style="width: max-content; background-color:#039af7 ;" onclick="window.location.href='/addCat'">Add Category</button>
        <button class="btn btn-info mb-3 btn-sm"  style="width: max-content; background-color:#039af7 ;" onclick="window.location.href='/home'">Add Product</button>
        <button class="btn btn-info mb-3 btn-sm"  style="width: max-content; background-color:#039af7 ;" onclick="window.location.href='/products'">Product List</button>
        <button class="btn btn-info mb-3 btn-sm"  style="width: max-content; background-color:#039af7 ;" onclick="window.location.href='/logout'">Logout</button>
    </div>
        <ul id="categoryList">
            <% categories.forEach(function(category, index) { %>
            <li>
                <div style="background-color: currentColor;" class="card category-card">
                <h4><%= category.cat_name %></h4>
                <div class="button-group">
                    
                    <a href="/editcat/<%= category.cat_id %>" class="btn btn-success">Edit</a>
                    <a href="/deletecategory/<%= category.cat_id %>" class="btn btn-danger">Delete</a>
                </div>
                </div>
            </li>
            <% }); %>
        </ul>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

